<% if @specie.errors.any? %>
  <ul>
    <% @specie.errors.full_messages.each do |m| %>
      <li><%= m %></li>  
    <% end %>
  </ul>
<% end %>

<h4>Update specie</h4>
<form action="/species/<%= @specie.id %>" method="post">
  <input name="_method" type="hidden" value="put">
  <label for="species_name">Name:</label>
  <input type="text" name="name" value="<%= @specie.name %>">
  <button>Update</button>
</form> 