<% if @sighting.errors.any? %>
  <ul>
    <% @sighting.errors.full_messages.each do |m| %>
      <li><%= m %></li>  
    <% end %>
  </ul>
<% end %>

<h2>Add new sighting:</h2>
<form action="/species/<%= @sighting.specie_id %>/sightings/new" method='post'>
<label for="sighting_date">Date:</label>
<input type="date" name='sighting[date]'>
<label for='sighting_longitude'>Longitude:</label>
<input type='number' min='0' step='any' name='sighting[longitude]'>
<label for='sighting_latitude'>Longitude:</label>
<input type='number' min='0' step='any' name='sighting[latitude]'>
<button>Add sighting</button>
</form>
