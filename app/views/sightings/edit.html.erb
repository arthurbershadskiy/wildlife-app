<h1>Edit sighting:</h1>

<% if @sighting.errors.any? %>
  <ul>
    <% @sighting.errors.full_messages.each do |m| %>
      <li><%= m %></li>  
    <% end %>
  </ul>
<% end %>


<form action="/species/<%= @sighting.specie_id %>/sightings/<%= @sighting.id %>" method='post'>
<input name='_method' type='hidden' value='put'>
<label for="sighting_date">Date:</label>
<input type="date" name='sighting[date]' value='<%= @sighting.date %>'>
<label for='sighting_longitude'>Longitude:</label>
<input type='number' min='0' step='any' name='sighting[longitude]'  value='<%= @sighting.longitude %>'>
<label for='sighting_latitude'>Longitude:</label>
<input type='number' min='0' step='any' name='sighting[latitude]' value='<%= @sighting.latitude %>'>
<button>Update sighting</button>
</form>
